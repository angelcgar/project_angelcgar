---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Avatar from "../components/Avatar.astro";
import MiGrid from "../components/MiGrid.astro";
import OtroComponente from "../components/OtroComponente.astro";
import MiFooter from "../components/MiFooter.astro";
import Badge from "../components/Badge.astro";
---

<Layout title="Portafolio de angelcgar.">
  <main class="max-w-5xl m-auto mt-16 pb-20 px-4">
    <Avatar />
    <section class="w-full mx-auto lg:w-[740px] py-14">
      <h1
        class="text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row text-white gap-x-4 pb-4 lg:pb-10"
      >
        Hey, soy angelcgar <a
          href="https://www.linkedin.com/in/angel-contreras-b45a66290/"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-balance max-w-[700px]">
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Debitis modi
        harum quos dignissimos illum laudantium eos, accusamus veniam blanditiis
        consectetur.
      </h2>
      <OtroComponente />
    </section>
    <MiGrid />
    <MiFooter />
  </main>
</Layout>
