---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Avatar from "../components/Avatar.astro";
import MiGrid from "../components/MiGrid.astro";
import OtroComponente from "../components/OtroComponente.astro";
import MiFooter from "../components/MiFooter.astro";
import Badge from "../components/Badge.astro";
---

<Layout title="Portafolio de angelcgar.">
  <main class="max-w-5xl m-auto mt-16 pb-20 px-4">
    <Avatar />
    <section class="w-full mx-auto lg:w-[740px] py-14">
      <h1 class="md:text-5xl sm:text-3xl font-bold text-center text-white">
        Hey, soy angelcgar <Badge>Disponible para trabajar</Badge>
      </h1>
      <OtroComponente />
    </section>
    <MiGrid />
    <MiFooter />
  </main>
</Layout>
