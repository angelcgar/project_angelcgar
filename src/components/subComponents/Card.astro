---
interface Props {
  name: string;
  title: string;
  body: string;
  href: string;
  imageHref: string;
}

const { name, href, title, body, imageHref } = Astro.props;
---

<div
  class="link-card relative flex flex-col items-center justify-center w-full p-[1px] transition-all rounded-md bg-gradient-to-b from-white/20 via-transparent to-transparent hover:via-white/10"
>
  <img src={imageHref} alt=`Una imagen de mi proyecto ${name}` />
  <h3 class="mt-4 text-2xl font-bold text-center text-white">
    {title}
  </h3>
  <p class="mb-4 p-1">
    {body}
  </p>
  <a href={href}> </a>
</div>

